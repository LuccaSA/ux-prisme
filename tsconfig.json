{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "baseUrl": "./",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@prisme/common": [
        "libraries/common/src/index"
      ],
      "@prisme/documentation/scss": [
        "documentation/scss"
      ],
      "@prisme/documentation/ng": [
        "documentation/ng"
      ]
    }
  }
}